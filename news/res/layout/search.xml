<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/comments_layout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/main_background"
	android:orientation="vertical"
	>

	<LinearLayout
        android:id="@+id/searchL1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"

        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/searchL2"
            android:layout_width="0.0px"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" >

            <EditText
                android:id="@+id/search_Keywords"
                android:layout_width="fill_parent"
                android:layout_height="34dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_weight="0.54"
                android:background="@drawable/edittext"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:imeOptions="actionDone"
                android:maxLength="25"
                android:maxLines="1"
                android:paddingLeft="3dip"
                android:singleLine="true" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/search_imgbtn_click"
            android:scaleType="fitCenter" />

    </LinearLayout>
    <ListView 
		android:id="@+id/searchlist" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:listSelector="@drawable/newslist_item_selector"
		android:cacheColorHint="#00000000" 
		android:divider="@drawable/list_separator_line"
		/>
</LinearLayout>